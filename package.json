{
  "name": "prisma-trpc-generator",
  "version": "2.0.2",
  "description": "Prisma 2+ generator to emit fully implemented tRPC routers",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/omar-dulaimi/prisma-trpc-generator.git"
  },
  "bin": {
    "prisma-trpc-generator": "lib/generator.js"
  },
  "scripts": {
    "generate": "tsc && npx prisma generate",
    "package:publish": "./package.sh && cd package && npm publish",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:basic": "vitest run tests/basic-generation.test.ts",
    "test:comprehensive": "vitest run tests/comprehensive-schema-coverage.test.ts",
    "test:edge-cases": "vitest run tests/edge-cases.test.ts",
    "test:multi-provider": "vitest run tests/multi-provider.test.ts",
    "test:performance": "vitest run tests/performance.test.ts",
    "test:configuration": "vitest run tests/configuration.test.ts",
    "test:coverage": "vitest run --coverage",
    "test:coverage:basic": "vitest run --coverage tests/basic-generation.test.ts",
    "test:coverage:comprehensive": "vitest run --coverage tests/comprehensive-schema-coverage.test.ts",
    "test:coverage:all": "vitest run --coverage tests/basic-generation.test.ts tests/comprehensive-schema-coverage.test.ts tests/edge-cases.test.ts",
    "test:ci": "vitest run --coverage",
    "test:type-check": "tsc --noEmit",
    "test:sequential": "vitest run --poolOptions.threads.singleThread=true",
    "lint": "eslint src/ tests/ --fix",
    "format": "prettier --write src/ tests/",
    "prerelease": "npm run generate && npm run test:type-check && npm run lint",
    "semantic-release": "semantic-release",
    "ci:test": "npm run test:ci",
    "ci:build": "npm run generate"
  },
  "author": {
    "name": "Omar Dulaimi",
    "url": "https://github.com/omar-dulaimi"
  },
  "keywords": [
    "prisma",
    "prisma-client",
    "prisma-schema",
    "prisma-generator",
    "trpc",
    "zod",
    "routers",
    "prisma-trpc-generator"
  ],
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^6.13.0",
    "@prisma/generator-helper": "^6.13.0",
    "@prisma/internals": "^6.13.0",
    "pluralize": "^8.0.0",
    "prisma-trpc-shield-generator": "0.2.1",
    "prisma-zod-generator": "^1.1.1",
    "ts-morph": "^26.0.0",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.3",
    "@semantic-release/npm": "^12.0.2",
    "@semantic-release/release-notes-generator": "^14.0.3",
    "@trpc/server": "^11.4.3",
    "@types/node": "^24.1.0",
    "@types/pluralize": "^0.0.33",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitest/coverage-v8": "^3.2.4",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "expect-type": "^1.2.2",
    "prettier": "^3.6.2",
    "prisma": "^6.13.0",
    "semantic-release": "^24.2.7",
    "trpc-shield": "^1.3.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4",
    "zod": "^4.0.14"
  },
  "bugs": {
    "url": "https://github.com/omar-dulaimi/prisma-trpc-generator/issues"
  },
  "homepage": "https://github.com/omar-dulaimi/prisma-trpc-generator#readme",
  "private": true
}
