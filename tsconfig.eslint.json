{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2019",
    "lib": ["es2019"],
    "noImplicitAny": true,
    "moduleResolution": "node",
    "declaration": false,
    "sourceMap": false,
    "resolveJsonModule": true,
    "typeRoots": ["src/types.ts"],
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "noEmit": true
  },
  "include": ["./src/**/*.ts", "./tests/**/*.ts"],
  "exclude": ["node_modules", "lib", "package", "coverage", "prisma/generated"]
}