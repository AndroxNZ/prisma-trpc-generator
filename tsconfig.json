{
  "extends": "@tsconfig/node-lts/tsconfig.json",
  "compilerOptions": {
    "module": "Node16",
    "moduleResolution": "node16",
    "outDir": "./lib",
    "rootDir": "./src",
    "typeRoots": ["node_modules/@types", "src/types.ts"],
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noEmitOnError": false
  },
  "include": ["./src/**/**/*.ts"]
}
